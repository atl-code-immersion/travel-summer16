<%= form_for(@destination) do |f| %>
  <% if @destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
      <% @destination.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :city, placeholder: "City Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :country, placeholder: "Country", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :latitude, step: 'any', placeholder: "Latitude", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :longitude, step: 'any', placeholder: "Longitude", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :population, placeholder: "Population", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, placeholder: "Describe it!", class: "form-control", rows: "10" %>
  </div>
  <div class="form-group">
    <%= f.label "Upload Avatar: " %>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit "Let's Go!", class: "btn btn-info" %>
  </div>
<% end %>
